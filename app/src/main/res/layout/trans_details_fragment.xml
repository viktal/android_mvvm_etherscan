<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="transDetailsViewModel"
            type="main.src.etherscan.viewmodels.TransDetailsViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.TransDetailsFragment"
        android:background="@color/color_bg_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chart_layout"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/top_app_bar">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    style="@style/Widget.MaterialComponents.Toolbar.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/tokens_cap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="@string/transaction_details"
                        tools:text="Transaction Details" />

                </com.google.android.material.appbar.MaterialToolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/trans_details"
                android:orientation="vertical">

                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/trans_det_progress_bar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/curved_toolbar">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/trans_details_linear"
                        android:layout_margin="9dp"
                        android:paddingBottom="30dp">

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="2dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/fs_token_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transaction Hash" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/trans_hash"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/color_gray"
                                android:textSize="@dimen/default_font"
                                android:layout_width="343dp"
                                android:layout_height="wrap_content"
                                android:text="@{transDetailsViewModel.model.hash}"
                                tools:text="0xb4258b6d779758fb7740f22bd378482ad84d723314dde162ec407d0b7cfd6f56" />

                            <Button
                                android:id="@+id/copy_hash"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:icon="@drawable/baseline_content_copy_24"
                                style="@style/Widget.App.Button.OutlinedButton.IconOnly" />
                        </RelativeLayout>


                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="7dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/fs_token_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/default_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{transDetailsViewModel.model.success ? `Success` : `Fail`}"
                            tools:text="Success" />


                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="7dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/fs_token_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Block" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/default_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{@string/block(String.valueOf(transDetailsViewModel.model.blockNumber), String.valueOf(transDetailsViewModel.model.confirmations))}"
                            tools:text="Success" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="7dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/fs_token_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="From" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/trans_from"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/color_gray"
                                android:textSize="@dimen/default_font"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{transDetailsViewModel.model.from}"
                                tools:text="Success" />

                            <Button
                                android:id="@+id/copy_from"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:icon="@drawable/baseline_content_copy_24"
                                style="@style/Widget.App.Button.OutlinedButton.IconOnly" />
                        </RelativeLayout>


                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="7dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/fs_token_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/trans_to"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/color_gray"
                                android:textSize="@dimen/default_font"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{transDetailsViewModel.model.to}"
                                tools:text="Success" />

                            <Button
                                android:id="@+id/copy_to"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:icon="@drawable/baseline_content_copy_24"
                                style="@style/Widget.App.Button.OutlinedButton.IconOnly" />
                        </RelativeLayout>

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="7dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/fs_token_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Timestamp" />

                        <TextView
                            android:id="@+id/timestamp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/default_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sun May 16 2021 at 15:07" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="7dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/fs_token_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Value USD" />

                        <TextView
                            android:id="@+id/money_count_dollar"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/default_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(transDetailsViewModel.model.moneyCountDollar)}"
                            tools:text="Success" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="7dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/fs_token_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Value" />

                        <TextView
                            android:id="@+id/money_count"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/default_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(transDetailsViewModel.model.moneyCount)}"
                            tools:text="Success" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="7dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/fs_token_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gas Limit" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/default_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(transDetailsViewModel.model.gasLimit)}"
                            tools:text="Success" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="7dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/fs_token_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gas Used by Transaction" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/default_font"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(transDetailsViewModel.model.gasUsed)}"
                            tools:text="Success" />
                    </LinearLayout>
                </ScrollView>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
