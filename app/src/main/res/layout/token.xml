<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/token_item">

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:background="@color/color_shadow_blue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/token_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fs_token_name"
        android:textColor="@color/color_gray"
        tools:text="Ethereum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />


    <TextView
        android:id="@+id/money_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/fs_token_mon_d"
        tools:text="$ 35,925.56"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/token_title"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.918" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fs_token_one_d"
        tools:text="$ 35,925.56 "
        app:layout_constraintTop_toBottomOf="@+id/token_title"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/image"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/description_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fs_token_one_d"
        tools:text="(+7.23%)"
        android:textColor="@color/color_green"
        app:layout_constraintStart_toEndOf="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/token_title"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp" />


    <TextView
        android:id="@+id/money_count_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fs_token_mon_d"
        tools:text="$ 35,925.56"
        app:layout_constraintTop_toBottomOf="@+id/money_count"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/description_percent"
        app:layout_constraintHorizontal_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
