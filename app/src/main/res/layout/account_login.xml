<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="AuthViewModel"
            type="main.src.etherscan.viewmodels.AuthViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_blue">
        <RelativeLayout
            android:background="@drawable/curved_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_margin="20dp"
                android:visibility="visible"
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:paddingTop="30dp">

                <TextView
                    android:layout_marginTop="3dp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address_info"
                    android:textColor="@color/black"

                    android:layout_gravity="center"
                    android:id="@+id/textInfoAddress" />

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/input_field_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={AuthViewModel.model.address}"
                    android:textColor="@color/black"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="20dp"
                android:visibility="invisible"
                android:id="@+id/input_mnemonic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:paddingTop="30sp">

                <TextView
                    android:layout_marginTop="3dp"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mnemonic_info"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/textInfoMnemonic" />

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/input_field_mnemonic"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="@={AuthViewModel.model.mnemonic}"
                    android:textColor="@color/black"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:text="@string/login_screen_btn_name"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_below="@id/input_mnemonic"/>

        </RelativeLayout>

    </FrameLayout>

</layout>
