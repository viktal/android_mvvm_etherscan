<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/transaction_item">


    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/arrow_image"
        android:background="@drawable/baseline_north_east_24"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fs_token_mon_d"
        android:textColor="@color/color_gray"
        tools:text="26 feb 2019"
        app:layout_constraintStart_toEndOf="@+id/arrow_image"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fs_token_one_d"
        tools:text="From: 12ewfw..wef"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintStart_toStartOf="@+id/date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/money_count_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/fs_token_mon_d"
        android:textStyle="italic"
        tools:text="$ 35,925.56"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/money_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="@dimen/fs_token_mon_d"
        android:textStyle="italic"
        tools:text="123 ETH"
        app:layout_constraintStart_toEndOf="@+id/address"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintTop_toBottomOf="@+id/money_count_dollar"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
