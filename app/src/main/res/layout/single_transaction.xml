<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginStart="5dp"
    android:id="@+id/transaction_item">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:id="@+id/arrow_image"
        android:layout_marginEnd="10dp"
        android:background="@drawable/baseline_north_east_24" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/fs_token_name"
                    android:textColor="@color/color_gray"
                    tools:text="26 feb 2019" />

            </LinearLayout>

            <TextView
                android:id="@+id/money_count_dollar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/fs_token_name"
                android:textStyle="italic"
                tools:text="$ 35,925.56" />
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/fs_token_mon_d"
                    tools:text="From: 12ewfw..wef" />

            </LinearLayout>

            <TextView
                android:id="@+id/money_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="@dimen/fs_token_mon_d"
                android:textStyle="italic"
                tools:text="123 ETH" />
        </TableRow>
    </TableLayout>
</LinearLayout>


