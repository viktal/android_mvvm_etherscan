<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="chartViewModel"
            type="main.src.etherscan.viewmodels.ChartViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.ChartFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chart_layout"
            android:visibility="visible"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/top_app_bar">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    style="@style/Widget.MaterialComponents.Toolbar.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/curved_toolbar">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="10sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/ethereum" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tokens_cap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/color_shadow_blue"
                            tools:text="Tokens capitalization: $123 345" />

                        <TextView
                            android:id="@+id/total_tokens"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:drawableRight="@drawable/baseline_arrow_upward_24"
                            android:textColor="@color/color_gray"
                            tools:text="$268.65" />

                    </LinearLayout>
                </com.google.android.material.appbar.MaterialToolbar>
            </com.google.android.material.appbar.AppBarLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="9dp"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:id="@+id/lineChart" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:singleSelection="true"
                app:selectionRequired="true">
                <Button
                    android:id="@+id/m1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1M"
                    style="@style/Widget.App.Button.OutlinedButton.TextOnly"
                    />
                <Button
                    android:id="@+id/m3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3M"
                    style="@style/Widget.App.Button.OutlinedButton.TextOnly"
                    />
                <Button
                    android:id="@+id/m6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6M"
                    style="@style/Widget.App.Button.OutlinedButton.TextOnly"
                    />
                <Button
                    android:id="@+id/y1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1Y"
                    style="@style/Widget.App.Button.OutlinedButton.TextOnly"
                    />
                <Button
                    android:id="@+id/y3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3Y"
                    style="@style/Widget.App.Button.OutlinedButton.TextOnly"
                    />
                <Button
                    android:id="@+id/max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAX"
                    style="@style/Widget.App.Button.OutlinedButton.TextOnly"
                    />
            </com.google.android.material.button.MaterialButtonToggleGroup>




</LinearLayout>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/chart_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

    </FrameLayout>
</layout>
